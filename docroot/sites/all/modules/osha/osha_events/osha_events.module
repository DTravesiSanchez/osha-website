  }
  if (!empty($_REQUEST['field_start_date_value2'])) {
    $date = explode('/', $_REQUEST['field_start_date_value2']['date']);
    $form['to_date']['#default_value'] = $date[2] . '-' . $date[1] . '-' . $date[0];
  }
  return $form;
}

